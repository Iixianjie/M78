{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@lxjx/fr/lib/*": [
        "src/components/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "importHelpers": true
  },
  "include": [
    "src/components/**/*",
    "src/docs/**/*",
    "./app.d.ts",
    "./script",
    ".eslintrc.js"
  ],
  "exclude": [
    "../src/components/*/style/**",
    "lib"
  ]
}
