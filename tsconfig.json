{
  "compilerOptions": {
    "baseUrl": "./",
//    "types": ["vite/client", "jest"],
    "paths": {
      "@/*": ["src/*"],
      "m78/*": [
        "src/components/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "node_modules/@types/jest",
    "./src/components/**/*",
    "./src/docs/**/*",
    "./src/mock/**/*",
    "./test/**/*",

    "./.babelrc.js",
    "./app.d.ts",
    "./script",
    ".eslintrc.js",
    "./play/**/*",
    "./src/app.tsx"
  ],
  "exclude": [
    "../src/components/*/style/**",
    "lib"
  ]
}
