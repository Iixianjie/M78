{
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"],
      "@lxjx/fr/lib/*": [
        "./src/components/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "declaration": true,
    "declarationMap": true,
    "outDir": "../lib",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "importHelpers": true
  },
  "include": [
    "../src/components/**/*",
    "../app.d.ts"
  ],
  "exclude": [
    "../src/components/*/style/**",
    "../lib"
  ]
}
